@{
    ViewBag.Title = "Contact";
}
<style type="text/css">
    #map{width: 460px; height: 250px}
</style>
<div class="row hidden-sm hidden-xs">
    <img class="img-rounded" style="width:100%" src="~/Images/banner_contact.png">
</div>

@Html.Partial("_Breadcrumb")

<div class="row" style="margin-top:20px; margin-left:10px; margin-right:10px;">

    <div class="col-md-7">
        <p><span class="title03"><img src="~/Images/icon/icon_location.png" alt="" width="25" height="25">總管理處位置圖</span></p>
        <div style="margin:5px;">
            <div id="map"></div>
        </div>        
    </div>
    <div class="col-md-5 textzone03_blue_16">
        <address>
            <p class="contact_title">@Resources.PageResource.CompanyTitle</p>
            <p style="padding-top:5px"><strong>@Resources.PageResource.LbTel</strong>：@Resources.PageResource.CompanyTel</p>
            <p style="padding-top:5px"><strong>@Resources.PageResource.LbFax</strong>：@Resources.PageResource.CompanyFax</p>
            <p style="padding-top:5px"><strong>@Resources.PageResource.LbAddress</strong>：@Resources.PageResource.CompanyAddress</p>
            <p style="padding-top:5px"><strong>@Resources.PageResource.LbEmail</strong>：@Resources.PageResource.CompanyMail</p>
        </address>
        <a href="@Url.Action("Index","Map")" target="_blank" class="pull-right"><img src="~/Images/button_google.png"></a>
    </div>
</div>
<img class="img-responsive" src="~/Images/line2.gif">

<div class="row">
    <div class="form-horizontal thumbnail" style="border: 0px;">
        <h4>如有相關問題或疑問，歡迎填寫下列表單並留下基本資料，我們將盡快為您服務。</h4>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="company">公司</label>

            <div class="col-sm-10">
                <input class="form-control" name="company" id="company" type="text">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="name">姓名</label>
            <div class="col-sm-10">
                <input class="form-control" name="name" id="name" type="text">
                <label class="radio-inline">
                    <input type="radio" name="genderRadios" checked="checked" value="male"> 先生
                </label>
                <label class="radio-inline">
                    <input type="radio" name="genderRadios" value="female"> 小姐
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="tel">電話</label>

            <div class="col-sm-10">
                <input class="form-control" name="tel" id="tel" type="text">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="email">e-mail</label>
            <div class="col-sm-10">
                <input class="form-control" name="email" id="email" type="text">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="subject">主題</label>

            <div class="col-sm-10">
                <input class="form-control" name="subject" id="subject" type="text">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="comment">留言</label>
            <div class="col-sm-10">
                <textarea rows="3" class="form-control" name="comment" id="comment"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="確認送出" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script src="~/Scripts/jQuery-tinyMap-master/jquery.tinyMap.min.js"></script> 
    <script>
        $('#map').tinyMap({
            center: { 'lat': '24.704500', 'lng': '121.770155' },
            scrollwheel: false,//是否支援滑鼠滾輪縮放
            mapTypeControl: false,//是否可切換地圖類型
            zoomControl: false,//是否顯示縮放控制器
            streetViewControl: false,//是否顯示街景控制器
            draggable: false,//是否提供拖曳功能
            disableDoubleClickZoom: true,//是否停用左鍵雙擊放大地圖的功能
            zoom: 15,
            marker: [{
                addr: ['24.704970', '121.764155'],
                text: '@Resources.PageResource.CompanyTitle',
                title: '@Resources.PageResource.CompanyAddress'
                }]
        });

    </script>
}