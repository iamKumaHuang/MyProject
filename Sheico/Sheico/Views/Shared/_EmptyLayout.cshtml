<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Resources.PageResource.PageTitle</title>
    <meta name="keywords" content="@Resources.PageResource.MetaKeyword">
    <meta name="description" content="@ViewBag.Title,@Resources.PageResource.MetaDescription">
    <meta name="author" content="@Resources.PageResource.MetaAuthor" />
    <meta name="copyright" content="@Resources.PageResource.MetaCopyright" />
    <meta name="robots" content="all" />
    <meta name="revisit-after" content="1 days" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

@RenderBody()       

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>

